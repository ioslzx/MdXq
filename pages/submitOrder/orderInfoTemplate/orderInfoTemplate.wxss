
.orderInfoTemplateBox{
  background-color: white;
  width: 100%;
  padding: 20rpx 35rpx;
  box-sizing: border-box;
  overflow: hidden;
}
/*商品图片  */
.productImg{
  float: left;
}
.productImg image{
  width: 200rpx;
  height: 200rpx;
}
/*商品详情  */
.productName{
  float: left;
  margin-left: 45rpx;
  margin-top: 30rpx;
}
.productName view:nth-child(1){
  color: rgb(95, 95, 95);
  font-size: 38rpx;
  margin-bottom: 20rpx;
}
.productName view:nth-child(2){
  color: rgb(194, 195, 196);
  font-size: 35rpx;
}
.productName view:nth-child(3){
  color: rgb(194, 195, 196);
  font-size: 35rpx;
}
/*价格数量  */
.priceAndAmount{
  float: right;
  margin-top: 35rpx;
}
.priceAndAmount view:nth-child(1){
  color: rgb(95, 95, 95);
  font-size: 38rpx;
  margin-bottom: 40rpx;
}
.priceAndAmount view:nth-child(2){
  color: rgb(194, 195, 196);
  font-size: 35rpx;
}