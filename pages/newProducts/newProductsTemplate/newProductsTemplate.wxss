
.newProductsTemplate{
  display: block;
  /* border: 1rpx solid rgb(245, 246, 247); */
  height: 100%;
  background-color: white;
  width: 49%;
  padding: 15rpx; 
  /*宽定了，不会撑大盒子  */
  box-sizing: border-box;
  float: left;
  margin-bottom: 15rpx;
}
.newProductsTemplate:nth-child(odd){
  margin-right: 2%;
}
.productImage{
  width: 100%;
  height: 220rpx;
}
.productName{
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.discountPrice{
  width: 100%;
  height: 40rpx;
  margin-top: 40rpx;   
  margin-bottom: 5rpx;  
  vertical-align: middle;
}
.discountPrice span {
  width: 50%;
  display: inline-block;
  vertical-align: middle;
  color:#FE3E3F;
}
.salesAmount{
  width: 80%;
  padding: 10rpx;
  text-align: center;
  background-color: #FE3E3F;
  color: white;
  font-size: 32rpx;
  margin: 40rpx auto 20rpx;
}
