.sizeQuantityTemplateBox{
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  
}
/*产品图片跟价格  */
.imageAndPrice1{
  overflow: hidden;
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(245, 246, 247);
}
.imageAndPrice1 image{
  float: left;
  width: 120rpx;
  height: 120rpx;
  background-color: rebeccapurple;
  margin-right: 20rpx;
}
.price1{
  float: left;
}
.price1 text{
  display: block;
  font-size: 30rpx;
  color: rgb(95, 95, 95);
}
.price1 text:nth-child(1){
  color:rgb(209, 102, 103);
}
/*规格盒子  */
.sizeBox1{
  padding: 20rpx 20rpx;
  border-bottom: 2rpx solid rgb(245, 246, 247);
  text-align: center;
  font-size: 35rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.title1{
  padding: 0rpx 0rpx 20rpx 0rpx;
  text-align: left;
  font-size: 35rpx;
  color: rgb(95, 95, 95);
}
.sizeBox1 text{
  float: left;
  background-color: rgb(245, 246, 247);
  border-radius: 30rpx;
  padding: 5rpx 15rpx;
  margin-left: 40rpx;
  display: inline-block;
  font-size: 32rpx;
  width: 23%;
  margin-bottom: 20rpx;
}
.sizeActive1{
  background-color: purple!important;
  color: white;
}
/*购买数量盒子  */
.quantityBox1{
  /* margin-top: 10rpx; */
  padding: 20rpx;
  height: 130rpx;
  font-size: 35rpx;
  color: rgb(95, 95, 95);
  overflow: hidden;
  position: relative;
}
/*加减号盒子  */
.addQuantity1{
  /* width: 80rpx; */
  height: 26rpx;
  float: right;
  position: absolute;
  right: 30rpx;
  top: 90rpx;
}
/*加号和减号  */
.addQuantity1 text{
  width: 19px;  
  line-height: 26px;  
  text-align: center;  
  float: left;  
  background-color: rgb(245, 246, 247)
}
/*数值  */
.addQuantity1 input{
  width: 40px;  
  height: 26px;  
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
}