/* pages/shoppingCart/shoppingCart.wxss */

@import './shoppingCartGoodsTemplate/shoppingCartGoodsTemplate.wxss';
@import '../homepage/recommendTemplate/recommendTemplate.wxss';

page{
  background-color: rgb(245, 246, 247);
}
.shopppingCartPage{
  width: 100%;
  /* height: 600rpx; */
}
/*
购物车为空时的父元素
*/
.emptyShoppingCart{
  /* padding: 100rpx 0rpx 100rpx; */
  /* background-color: white; */
  text-align: center;
  height: 600rpx;
  width: 100%;
  margin-top: 250rpx;
}
/*
购物车图标
*/
.shoppingCartimg{
  background-color: rgb(211, 212, 213);
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx auto;
}
.shoppingCartimg image{
  width: 70%;
  height: 70%;
  margin-top: 15%;
}
/*
购物车空空的
*/
.emptyShoppingCart view:nth-child(2){
  font-size: 34rpx;
  color: rgb(194, 195, 196);
  letter-spacing: 5rpx;
}
/*
去购物
*/
.goShopping{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgb(112, 0, 108);
  color: white;
  font-size: 45rpx;
  margin: 40rpx auto;
  border-radius: 5rpx;
  letter-spacing: 10rpx;
}

/*
  购物车不为空
*/
.openVIPBox{
  /*  padding: 20rpx 20rp 20rpx 30rpx; 
   */
  width: 100%;
  height: 90rpx;
  background-color: rgb(254, 253, 249);
  overflow: hidden;
  line-height: 90rpx;
  border-top: 2rpx solid rgb(245, 246, 247);
  border-bottom: 10rpx solid rgb(245, 246, 247);
}
.ringImg{
  float: left;
  margin-left: 30rpx;
}
.ringImg image{
  margin-top: 25rpx;
  width: 40rpx;
  height: 40rpx;
}
.textBox{
  float: left;
  font-size: 30rpx;
  color: rgb(213, 106, 101);
  margin-left: 20rpx;
}
.openVIPBtn{
  border-radius: 10rpx;
  width: 15%;
  height: 50rpx;  
  line-height: 50rpx;
  text-align: center;
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  font-size: 33rpx;
  color: rgb(213, 106, 101);
  letter-spacing: 5rpx;
  border: 2rpx solid rgb(213, 106, 101);
}
.goodsListBox{
  background-color: white;
  width: 100%;
  height: auto;
}
/*
猜你喜欢
*/
.shoppingCartRecommand{
  width: 100%;
  height: auto;
  overflow: hidden;
  text-align: center;
}
.shoppingCartRecommand image{
  height: 100rpx;
  width: 30%; 
}
.shoppingCartRecommandGoods{
  padding-bottom: 110rpx; 
  overflow: hidden;
} 
/*结算  */
.price{
  width: 100%;
  height: 105rpx;
  background-color:white;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  line-height: 105rpx;
  overflow: hidden; 
  border-top: 2rpx solid rgb(245, 246, 247);
}
.chooseAll{
  float: left;
  color: rgb(95, 95, 95);
  font-size: 40rpx;
  margin-left: 20rpx;
}
.chooseAll checkbox-group{
  display: inline-block;
}
.totalDeleteImg{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 27%;
  top: 10rpx;
}
.totalDeleteImg image{
  width: 100%;
  height: 100%;
}
.totalPrice{
  float: left;
  margin-left: 25%;
  color: #fe5708;
  font-size: 35rpx;
}
.settlement{
  font-size: 35rpx; 
  float: right;
  background-color: #fe5708;
  text-align: center;
  width: 180rpx;
  color: white;
  letter-spacing: 10rpx;
}