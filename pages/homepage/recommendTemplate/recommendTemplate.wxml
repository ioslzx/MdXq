<template name='recommendTemplate'>
<view class='recommendProductTemplateBox' bindtap='goProductDetail' data-product_id='{{product_id}}'>
    <image class='recommendProductImage' src='{{exhibition}}'></image> 
    <view class='recommendProductName'>{{product_name}}</view>
    <view class='recommendDiscountPrice'>
      <span>¥{{member_price}}</span>
      <span>¥{{market_price}}</span>
      <view class='shoppingCart'> 
      <image src='../images/shoppingCart1.png'></image> 
      </view> 
    </view>
  </view>
</template>