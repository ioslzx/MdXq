@import '../../homepage/recommendTemplate/recommendTemplate.wxss';
page{
  background-color: #F8F8F8;
}
.myCollect{
  border-top: 1rpx solid #DBDBDB;
  width: 100%;
}
.myCollectTop{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: white;
  font-size: 30rpx;
  color: #870481;
  overflow: hidden;
}
.myCollectTop text:last-child{
  float: right;
}
.collectListBox{
  margin-top: 10rpx;
  overflow: hidden;
}
.recommendProductTemplateBox{
  width: 100%;
}
.collectList{
  position: relative;
  height:490rpx;
  width:49%;
  float:left;
  margin-bottom: 10rpx;
}
.collectList:nth-child(odd){
  margin-right: 2%;
}
.checkBox{
   position: absolute; 
   top: 30rpx;
   right: 30rpx;
}
.totalSelectBox{
  width: 100%;
  display: flex;
  background-color: white;
  position: fixed;
  left: 0;
  bottom: 0;
}
.totalSelectLeft,.totalSelectRigth{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
}
.totalSelectLeft{
  padding-left: 30rpx;
}
.totalSelectRigth{
  background-color: #FF7D00;
  color: white;
  text-align: center;
}