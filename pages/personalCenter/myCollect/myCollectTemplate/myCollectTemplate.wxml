<template name='myCollectTemplate'>
<view class='recommendProductTemplateBox' bindtap='goProductDetail' data-product_id='{{mallProduct.product_id}}'>
    <image class='recommendProductImage' src='{{mallProduct.exhibition}}'></image> 
    <view class='recommendProductName'>{{mallProduct.product_name}}</view>
    <view class='recommendDiscountPrice'>
      <span>¥{{mallProduct.member_price}}</span>
      <span>¥{{mallProduct.market_price}}</span>
    </view>
  </view>
</template>