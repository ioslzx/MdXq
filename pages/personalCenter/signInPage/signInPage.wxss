@import '../../homepage/recommendTemplate/recommendTemplate.wxss';
page{
  background-color: #F8F8F8;
  height: 100%;
}
.signInPage{
  width: 100%;
  /* background-color: white; */
  /* background-color: #311E3C;   */
  border-top: 1rpx solid #DBDBDB;
  position: relative;
}
/* 通知 */
.NoticeBox{
  margin-top: 10rpx;
  color: white;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  font-size: 34rpx;
  overflow: hidden;
  position: absolute;
}
.NoticeBox text{
  float: left;
}
.NoticeNum{
  border: 1rpx solid white;
  margin-left: 5%;
  padding:0 10rpx;
  box-sizing: border-box;
}
.signInBgBox{
  width: 100%;
  height: 580rpx;
}
.signInBg{
  width: 100%;
  height: 100%;
}
.signInBox{
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.signInTime{
  box-sizing: border-box;
  height: 120rpx; 
  text-align: center;
  line-height: 65rpx;
  float: left;
  color: white;
  font-size: 32rpx;
  margin-right: 20rpx;
  position: relative;
}
 .signInTime image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: 53rpx;
   -webkit-animation-name: scaleDraw; 
  /* -webkit-animation-name: living; */
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-duration: 5s; 
} 
.signInTimeCurrent{
  position: absolute;
  left: 45%;
  top: 92rpx;
  width: 120rpx;
  height: 300rpx;
}
.signInTimeCurrentText{
  position: absolute;
  left: -22%;
  top: 75rpx;
  font-size: 30rpx;
  color: white;
}
.signInTimeFinished1{
  position: absolute;
  top: 28%;
  left: 16%;
}
.signInTimeFinished2{
  position: absolute;
  top: 55%;
  left:10%;
}
.signInTimeFinished3{
  position: absolute;
  top: 28%;
  right: 16%
}
.signInTimeFinished4{
  position: absolute;
  top: 55%;
  right: 10%
}
@keyframes scaleDraw {  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
      0%{
          transform: scale(1);  /*开始为原始大小*/
      }
      25%{
          transform: scale(1.1); /*放大1.1倍*/
      }
      50%{
          transform: scale(1);
      }
      75%{
          transform: scale(1.1);
      }
  }
  @keyframes living {
      0%{
          transform: scale(1);
          opacity: 0.5;  
      }
      50%{
          transform: scale(1.5);  
          opacity: 0;   /*圆形放大的同时，透明度逐渐减小为0*/
      }
      100%{
          transform: scale(1);
          opacity: 0.5;
      }
  }
  .ballon{
      width: 150px;
      height: 200px;
      background: url("images/balloon.png");
      background-size: 150px 200px;
      -webkit-animation-name: scaleDraw; /*关键帧名称*/
      -webkit-animation-timing-function: ease-in-out; /*动画的速度曲线*/
      -webkit-animation-iteration-count: infinite;  /*动画播放的次数*/
      -webkit-animation-duration: 5s; /*动画所花费的时间*/
  }
