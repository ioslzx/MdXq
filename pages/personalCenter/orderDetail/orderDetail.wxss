page{
  background-color: #F8F8F8;
}
.orderDetail{
  width: 100%;
  border-top: 1rpx solid #DBDBDB;
  padding-bottom: 100rpx;
}
/* 倒计时 */
.countDownBox{
  width: 100%;
  height: 250rpx;
  background-color: orange;
  color: white;
  font-size: 36rpx;
  position: relative;
}
.countDownBox image{
  width: 100%;
  height: 100%;
}
.countDownBox view{
  z-index: 666;
  position: absolute;
  top: 100rpx;
  left: 100rpx;
}
.countDownBox view:nth-child(3){
  font-size: 30rpx;
  top: 160rpx;
}
/* 头部 */
.orderDetailTop{
  width: 100%;
  background-color: white;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.orderDetailTopLine{
  padding-bottom: 20rpx;
  width: 100%;
}
.orderDetailTopLine text:first-child{
  color: #BCBCBC;
}
.orderDetailTopLine:first-child text:last-child{
  color: #FF3738;
}
.orderDetailTopLine text:last-child{
  color: #7C7C7C;
}
.goPayMoney{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #800476;
  color: white;
  text-align: center;
  border-radius: 12rpx;
  font-size: 34rpx;
}
.cancleOrder{
  width: 100%;
  display: flex;
  margin-top: 50rpx;
  font-size: 34rpx;
}
.cancleOrder view:first-child{
  margin-right: 20rpx;
}
.cancleOrder view{
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #A9A9A9;
  text-align: center;
  border-radius: 12rpx;
  color: #5B5B5B;
}
/* 地址 */
.orderDetailAddress{
  margin-top: 20rpx;
  width: 100%;
  background-color: white;
  padding: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}
.addressLeft{
  width: 50rpx;
  height: 50rpx;
  float: left;
  position:absolute;
  top: 40%;
}
.addressLeft image{
  width: 100%;
  height: 100%
}
.addressRight{
  float: left;
  font-size: 31rpx;
  width: 88%;
  margin-left: 80rpx;
  color: #6B6B6B;
}
.addressRight view:first-child{
  padding-bottom: 10rpx;
}
.addressRight view:first-child text:last-child{
  float: right;
}
/* 商品列表 */
.productListBox{
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.productList{
  padding: 20rpx 30rpx 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E4E4E4;
  font-size: 31rpx;
  overflow: hidden;
}
.productListLeft{
  float: left;
  width: 30%;
  height: 200rpx;
  background-color: rebeccapurple;
}
.productListLeft image{
  width: 100%;
  height: 100%;
}
.productListRight{
  width: 68%;
  margin-left: 2%;
  float: left;
}
.productName{
  color:#6B6B6B;
  margin-bottom: 20rpx; 
}
.productColor{
  color: #BCBCBC;
  margin-bottom:13%;
}
.productInfo text:last-child{
  float: right;
  color: #BCBCBC;
}
/* 订单金额 */
.productPrice{
  margin-top: 20rpx;
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 31rpx;
}
.productPriceLine{
  overflow: hidden;
  padding-bottom: 15rpx;
  color: #5F5F5F;
}
.productPriceLine:last-child{
  padding-bottom: 0;
}
.productPriceLine text:last-child{
  float: right;
  color: #FF3738;
}
.productPriceLine:last-child text:first-child{
  margin-left: 70%;
}