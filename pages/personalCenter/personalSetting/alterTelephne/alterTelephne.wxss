.alterTelephne{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 32rpx;
  border-top: 1rpx solid #DBDBDB;
}
.telephone{
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden
}
.telephone text{
  height: 100%;
  float: left;
  /* display: inline-block; */
}
.telephone input{
  width: 70%;
  height: 100%;
  float: left;
  /* display: inline-block; */
}
.saveBtn{
  width: 100%;
  margin: 30rpx auto;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #84047B;
  text-align: center;
  color: white;
  border-radius: 12rpx;
}