
 @import '../citySelectModel/citySelectModel.wxss';  

page{
  background-color: #F8F8F8;
}
.addShippingAddress{
  border-top: 1rpx solid #DBDBDB;
  padding-left: 30rpx;
  background-color: white;
  width: 100%;
  box-sizing: border-box;
}
.addShoppingInputBox{
  font-size: 30rpx;
  width: 100%;
  margin-bottom: 40rpx;
}
.addShoppingInputLine{
  border-bottom: 1rpx solid #EEEEEE;
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
  position: relative;
}
.addShoppingInputLine:nth-child(4){
  height: 125rpx;
  line-height: 125rpx;
  border: 0;
}
.addShoppingInputLine>input{
  float: right;
  width: 80%;
  height: 100%;
}
.addShoppingInputLine:nth-child(1) text{
  float: left;
}
.addShoppingInputLine:nth-child(1) input{
  width: 55%;
  float: left;
}
.addShoppingInputLine:nth-child(1) radio-group{
  position: absolute;
  right: 0rpx;
}
.addShoppingInputLine>.telephoneInput{
  position: absolute;
  top: 0rpx;
  left: 150rpx;
  background-color: res;
  width: 80%;
}
.addShoppingInputLine>.AddressInput{
  position: absolute;
  top: 0rpx;
  left: 150rpx;
  background-color: res;
  width: 80%;
}
.location text{
  float: left;
}
.location input{
  float: left!important;
  width: 65%;
  height: 100%;
}
.location image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 85%;
  top: 235rpx;
}
.radioBox{
  display: inline-block;
  float: right;
  margin-right: 20rpx;
}
radio .wx-radio-input.wx-radio-input-checked {
background-color:#7F0373!important;
border-color:#7F0373!important;
}
radio .wx-radio-input{
  width: 30rpx;
  height: 30rpx;
}

/* 设置默认地址 */
.setDefaultAddress{
  width: 100%;
  /* padding: 20rpx; */
  overflow: hidden;
  box-sizing: border-box;
  background-color: white;
  font-size: 30rpx;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 20rpx;
}
.setDefaultAddress>switch{
  /* width: 70rpx;
  height: 40rpx; */
  float: right;
  margin-right: 20rpx;
}
/* 保存地址 */
.saveAddressBtn{
  width: 80%;
  padding: 25rpx;
  font-size: 32rpx;
  background-color: #800476;
  color: white;
  margin-top: 100rpx;
  text-align: center;
  margin-left: 7%;
}