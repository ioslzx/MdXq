/* 设置默认地址 */
.setDefaultAddress{
  width: 100%;
  /* padding: 20rpx; */
  overflow: hidden;
  box-sizing: border-box;
  background-color: white;
  font-size: 30rpx;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 20rpx;
}
.setDefaultAddress>switch{
  /* width: 70rpx;
  height: 40rpx; */
  float: right;
  margin-right: 20rpx;
}
/* 保存地址 */
.saveAddressBtn{
  width: 80%;
  padding: 25rpx;
  font-size: 32rpx;
  background-color: #800476;
  color: white;
  margin-top: 100rpx;
  text-align: center;
  margin-left: 7%;
}