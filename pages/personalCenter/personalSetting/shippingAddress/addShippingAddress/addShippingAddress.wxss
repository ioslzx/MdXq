
 @import '../citySelectModel/citySelectModel.wxss';  

page{
  background-color: #F8F8F8;
}
.addShippingAddress{
  border-top: 1rpx solid #DBDBDB;
  padding-left: 30rpx;
  background-color: white;
  width: 100%;
  box-sizing: border-box;
}
.addShoppingInputBox{
  font-size: 30rpx;
  width: 100%;
  margin-bottom: 40rpx;
}
.addShoppingInputLine{
  border-bottom: 1rpx solid #EEEEEE;
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
}
.addShoppingInputLine:nth-child(4){
  height: 125rpx;
  line-height: 125rpx;
  border: 0;
}
.addShoppingInputLine>input{
  float: right;
  width: 80%;
  height: 100%;
}
